{
  "name": "Fba Fee Calculator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This is a Chrome Extension to view FBA fees for a particular Amazon Product",
  "homepage_url": "https://github.com/urbangeek",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
      "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Fba Fee Calculator",
    "default_popup": "src/browser_action/browser_action.html"
  },
    
    "permissions": [ "activeTab", "http://*/*", "https://*/*" ],
    
    
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}